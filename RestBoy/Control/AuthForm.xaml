<UserControl x:Class="RestBoy.Control.AuthForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RestBoy.Control"
             mc:Ignorable="d" 
             HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    <Grid Margin="0 20 0 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" MinHeight="40"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="240"/>
                <ColumnDefinition Width="*" MinWidth="240"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Type" Margin="40 0 0 0"
                       HorizontalAlignment="Left" VerticalAlignment="Center" />
            <ComboBox x:Name="cbxAuthType" Grid.Column="1" VerticalContentAlignment="Center"
                      Foreground="Gray" Height="30" VerticalAlignment="Center" MinWidth="80" />
        </Grid>
    </Grid>
</UserControl>
